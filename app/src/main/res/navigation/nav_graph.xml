<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sarcoordinator.sarsolutions.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popEnterAnim="@android:anim/fade_in" />
        <action
            android:id="@+id/action_loginFragment_to_casesFragment"
            app:destination="@id/casesFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/trackFragment"
        android:name="com.sarcoordinator.sarsolutions.TrackFragment"
        android:label="Case"
        tools:layout="@layout/fragment_track">
        <action
            android:id="@+id/action_trackFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_trackFragment_to_shiftReportFragment"
            app:destination="@id/shiftReportFragment"
            app:popUpTo="@id/trackFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.sarcoordinator.sarsolutions.ResetPasswordFragment"
        android:label="Reset Password"
        tools:layout="@layout/fragment_reset_password" />
    <fragment
        android:id="@+id/casesFragment"
        android:name="com.sarcoordinator.sarsolutions.CasesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_cases">
        <action
            android:id="@+id/action_casesFragment_to_trackFragment"
            app:destination="@id/trackFragment" />
        <action
            android:id="@+id/action_casesFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.sarcoordinator.sarsolutions.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/shiftReportFragment"
        android:name="com.sarcoordinator.sarsolutions.ShiftReportFragment"
        android:label="ShiftReport"
        tools:layout="@layout/fragment_shift_report"
        >
        <action
            android:id="@+id/action_shiftReportFragment_to_casesFragment"
            app:destination="@id/casesFragment" />
    </fragment>
</navigation>