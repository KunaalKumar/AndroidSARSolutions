<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_gravity="center|top" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/heading"
        style="@style/Base.Widget.AppCompat.TextView.Heading"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?colorPrimary"
        android:text="Aliquam mus nascetur vitae consectetur platea viverra"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/message"
        style="@style/Base.Widget.AppCompat.TextView.SubHeading"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bibendum porttitor nisl parturient fusce dis elit"
        android:textAlignment="center"
        android:layout_gravity="center|bottom" />

</LinearLayout>