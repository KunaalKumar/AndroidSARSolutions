<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginEnd="@dimen/mtrl_card_spacing"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/shim_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/darker_gray"
            android:padding="16dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shim_tv_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shim_title" />

        <TextView
            android:id="@+id/shim_tv_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/shim_tv_1"
            app:layout_constraintStart_toEndOf="@id/shim_title"
            app:layout_constraintTop_toTopOf="@id/shim_tv_1" />

        <TextView
            android:id="@+id/shim_tv_3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shim_tv_1" />

        <TextView
            android:id="@+id/shim_tv_4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/shim_tv_3"
            app:layout_constraintStart_toEndOf="@id/shim_title"
            app:layout_constraintTop_toTopOf="@id/shim_tv_3" />

        <TextView
            android:id="@+id/shim_tv_5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shim_tv_3" />

        <TextView
            android:id="@+id/shim_tv_6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/shim_tv_5"
            app:layout_constraintStart_toEndOf="@id/shim_title"
            app:layout_constraintTop_toTopOf="@id/shim_tv_5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>