<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Night/Dark application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSecondary">@color/newBlue</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorError">@color/error</item>
        <item name="android:statusBarColor">@color/gray</item>
        <item name="android:navigationBarColor">@color/gray</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="isLightTheme">false</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background_dark</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/gray</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="SignInButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/dark_selector_btn</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
